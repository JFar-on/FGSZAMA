@model FGSZAMA.Controllers.OrderViewModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/zamowienie_index.css">
</head>
<body>
    <h1>Usuń Zamówienie</h1>

    <h3>Czy na pewno chcesz usunąć to zamówienie?</h3>
    <div>
        <h4>Zamówienie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Użytkownik
            </dt>
            <dd class="col-sm-10">
                @Model.UserEmail
            </dd>
            <dt class="col-sm-2">
                Zestaw
            </dt>
            <dd class="col-sm-10">
                @Model.Zestaw
            </dd>
            <dt class="col-sm-2">
                Kalorycznosc
            </dt>
            <dd class="col-sm-10">
                @Model.Kalorycznosc
            </dd>
            <dt class="col-sm-2">
                Cena Za Dzień (zł)
            </dt>
            <dd class="col-sm-10">
                @Model.CenaZaDzien
            </dd>
            <dt class="col-sm-2">
                Od
            </dt>
            <dd class="col-sm-10">
                @Model.DataOd
            </dd>
            <dt class="col-sm-2">
                Do
            </dt>
            <dd class="col-sm-10">
                @Model.DataDo
            </dd>
            <dt class="col-sm-2">
                Razem (zł)
            </dt>
            <dd class="col-sm-10">
                @Model.SumaCeny
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
         <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</body>
</html>
