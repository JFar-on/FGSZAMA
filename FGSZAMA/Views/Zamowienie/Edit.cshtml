@model FGSZAMA.Models.ZamowienieModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/zamowienie_edit.css">
</head>
<h4>Edytuj zamówienie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Zestaw" class="control-label"></label>
                <input asp-for="Zestaw" class="form-control" />
                <span asp-validation-for="Zestaw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kalorycznosc" class="control-label"></label>
                <input asp-for="Kalorycznosc" class="form-control" />
                <span asp-validation-for="Kalorycznosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenaZaDzien" class="control-label"></label>
                <input asp-for="CenaZaDzien" class="form-control" />
                <span asp-validation-for="CenaZaDzien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataOd" class="control-label"></label>
                <input asp-for="DataOd" class="form-control" />
                <span asp-validation-for="DataOd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDo" class="control-label"></label>
                <input asp-for="DataDo" class="form-control" />
                <span asp-validation-for="DataDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumaCeny" class="control-label"></label>
                <input asp-for="SumaCeny" class="form-control" />
                <span asp-validation-for="SumaCeny" class="text-danger"></span>
            </div>
            <p> </p>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-warning">Zatwierdź</button> 
                <a href="https://localhost:7019/Zamowienie" type="button" class="btn btn-outline-warning">Powrót</a>
            </div>
            <p> </p>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
