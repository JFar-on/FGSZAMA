@model FGSZAMA.Models.ZamowienieModel

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/zamowienie_delete.css">
</head>



<h3>Czy jesteś pewny że chcesz usunąć swoje zamówienie?</h3>
<div>
    <h4>Twoje zamówienie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zestaw)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zestaw)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kalorycznosc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kalorycznosc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CenaZaDzien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CenaZaDzien)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataOd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataOd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SumaCeny)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SumaCeny)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> 
        <a href="https://localhost:7019/Zamowienie" type="button" class="btn btn-outline-warning">Powrót</a>
    </form>
</div>
