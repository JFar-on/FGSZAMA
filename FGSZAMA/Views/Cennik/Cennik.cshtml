@{
    ViewData["Title"] = "Cennik";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cennik Zestawów - FarGol Szama</title>
    <link rel="stylesheet" href="~/css/cennik.css">
</head>
<body>
    <header class="cennik-header">
        <h1>Cennik Zestawów</h1>
        <p class="cennik-subtitle">Wybierz swój ulubiony zestaw i ciesz się smakiem!</p>
    </header>
    <main class="cennik-main">
        <div class="price-list">
            <div class="price-item">
                <h2>Zestaw Drwala</h2>
                <p class="price">39,99 zł</p>
                <p class="description">Soczysty burger, chrupiące frytki i orzeźwiający napój.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw Pomidor</h2>
                <p class="price">34,99 zł</p>
                <p class="description">Aromatyczna zupa pomidorowa, pieczywo i kompot domowy.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw Turbo</h2>
                <p class="price">44,99 zł</p>
                <p class="description">Burger z podwójnym mięsem, duża porcja frytek i shake.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw FitBox</h2>
                <p class="price">29,99 zł</p>
                <p class="description">Zdrowy wrap z kurczakiem, sałatka i smoothie.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw Ognisty</h2>
                <p class="price">39,99 zł</p>
                <p class="description">Pikantne skrzydełka, frytki i zimne piwo (bezalkoholowe).</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw Leśny</h2>
                <p class="price">37,99 zł</p>
                <p class="description">Kotlety z grzybami, ziemniaki i świeże warzywa.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
            <div class="price-item">
                <h2>Zestaw Komfort</h2>
                <p class="price">32,99 zł</p>
                <p class="description">Pierogi ruskie, surówka i kompot.</p>
                <button class="btn-details">Zobacz szczegóły</button>
            </div>
        </div>
    </main>
</body>
</html>