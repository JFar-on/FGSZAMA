@{
    ViewData["Title"] = "Menu";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/menu.css">
</head>
<body>

    <div class="menu-page">
        <div class="container text-center">
            <h1 class="text-warning">Nasze Menu</h1>
            <p class="text-light">Wybierz zestaw idealny dla siebie i ciesz się smakiem, który pokochasz!</p>
            <hr class="separator">
            <div class="row">
                <!-- Zestaw Drwala -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy drwala.jpg" alt="Zestaw Drwala">
                    <h2>Drwal</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Jajecznica z boczkiem i chlebem pełnoziarnistym.</li>
                        <li><strong>Obiad:</strong> Grillowany stek z ziemniakami i sałatką coleslaw.</li>
                        <li><strong>Kolacja:</strong> Kanapka z pastrami, kiszonym ogórkiem i musztardą na żytnim chlebie.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Kanapka z jajkiem sadzonym i szynką na tostowanym chlebie.</li>
                        <li><strong>Obiad:</strong> Kotlet mielony z ziemniakami i zasmażaną kapustą.</li>
                        <li><strong>Kolacja:</strong> Sałatka z kurczakiem, ciecierzycą i sosem jogurtowym.</li>
                    </ul>
                </div>
                <!-- Zestaw Pomidor -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy pomidor.jpg" alt="Zestaw Pomidor">
                    <h2>Pomidor</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Kanapki z pastą z suszonych pomidorów i rukolą.</li>
                        <li><strong>Obiad:</strong> Krem z pomidorów z bazylią i grzankami.</li>
                        <li><strong>Kolacja:</strong> Pieczone pomidory faszerowane kaszą jaglaną i fetą.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Wrap z hummusem, pomidorem i szpinakiem.</li>
                        <li><strong>Obiad:</strong> Makaron z sosem pomidorowym i grillowanymi warzywami.</li>
                        <li><strong>Kolacja:</strong> Bruschetta z pomidorami, czosnkiem i bazylią.</li>
                    </ul>
                </div>
                <!-- Zestaw Turbo -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy Turbo.jpg" alt="Zestaw Turbo">
                    <h2>Turbo</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Owsianka z masłem orzechowym i bananem.</li>
                        <li><strong>Obiad:</strong> Kurczak w sosie teriyaki z ryżem i warzywami stir-fry.</li>
                        <li><strong>Kolacja:</strong> Wrap z indykiem, warzywami i sosem jogurtowym.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Smoothie proteinowe z jagodami i szpinakiem.</li>
                        <li><strong>Obiad:</strong> Łosoś pieczony z kaszą quinoa i brokułami.</li>
                        <li><strong>Kolacja:</strong> Sałatka z tuńczykiem, jajkiem i oliwkami.</li>
                    </ul>
                </div>
                <!-- Zestaw FitBox -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy FitBox.jpg" alt="Zestaw FitBox">
                    <h2>FitBox</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Smoothie bowl z owocami i nasionami chia.</li>
                        <li><strong>Obiad:</strong> Grillowana pierś z kurczaka z kaszą bulgur i warzywami na parze.</li>
                        <li><strong>Kolacja:</strong> Lekka sałatka z rukolą, pomarańczą i orzechami włoskimi.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Jogurt naturalny z granolą i owocami.</li>
                        <li><strong>Obiad:</strong> Duszona pierś indyka z batatami i fasolką szparagową.</li>
                        <li><strong>Kolacja:</strong> Tofu wędzone z warzywami i sosem sojowym.</li>
                    </ul>
                </div>
                <!-- Zestaw Ognisty -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy ognisty.jpg" alt="Zestaw Ognisty">
                    <h2>Ognisty</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Omlet z papryczkami chili i serem cheddar.</li>
                        <li><strong>Obiad:</strong> Pikantne chili con carne z ryżem.</li>
                        <li><strong>Kolacja:</strong> Quesadilla z pikantnym kurczakiem i salsą.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Jajka po meksykańsku z tortillą.</li>
                        <li><strong>Obiad:</strong> Pikantna zupa tajska z krewetkami i mlekiem kokosowym.</li>
                        <li><strong>Kolacja:</strong> Sałatka z grillowanymi krewetkami i pikantnym dressingiem.</li>
                    </ul>
                </div>
                <!-- Zestaw Leśny -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy Leśny.jpg" alt="Zestaw Leśny">
                    <h2>Leśny</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Kanapki z pastą z grzybów leśnych i jajkiem na twardo.</li>
                        <li><strong>Obiad:</strong> Gulasz z dziczyzny z kluskami śląskimi i buraczkami.</li>
                        <li><strong>Kolacja:</strong> Tarta z kurkami i serem kozim.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Jajko sadzone z kaszą gryczaną i grzybami.</li>
                        <li><strong>Obiad:</strong> Polędwiczki wieprzowe z sosem borowikowym i puree ziemniaczanym.</li>
                        <li><strong>Kolacja:</strong> Zapiekanka ziemniaczana z leśnymi grzybami.</li>
                    </ul>
                </div>
                <!-- Zestaw Komfort -->
                <div class="menu-item">
                    <img src="~/img/Zestaw cateringowy Komfort.jpg" alt="Zestaw Komfort">
                    <h2>Komfort</h2>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Twarożek z rzodkiewką i szczypiorkiem, podany z pieczywem.</li>
                        <li><strong>Obiad:</strong> Kotlet schabowy z ziemniakami i mizerią.</li>
                        <li><strong>Kolacja:</strong> Zapiekanka makaronowa z szynką i serem.</li>
                    </ul>
                    <h3>Przykładowy zestaw:</h3>
                    <ul>
                        <li><strong>Śniadanie:</strong> Placki ziemniaczane z kwaśną śmietaną.</li>
                        <li><strong>Obiad:</strong> Gołąbki z sosem pomidorowym i ziemniakami.</li>
                        <li><strong>Kolacja:</strong> Kiełbasa z grilla z chlebem i musztardą.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
